#include <iostream>
#include "Digital-Signal-Processing.h"
#include "MQTT-Movement.h"

int main()
{
    //DSP TEST:
    char input;
    DSP dsp;
    dsp.FindMic();
    do
    {
        std::cin >> input;

        switch(input)
        {
        case 'w':
            dsp.StartRecording();
            break;

        case 's':
            dsp.PlaybackTest();
            break;
        }
    } while(input!='0');
    
    //MQTT TEST:
    MQTT mqtt;
    mqtt.run();
}
